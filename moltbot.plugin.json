{
  "id": "dingtalk-channel",
  "name": "DingTalk Channel",
  "version": "2.0.0",
  "description": "Custom channel for integrating Moltbot with DingTalk (Stream Mode)",
  "author": "Your Name",
  "license": "MIT",
  "extensions": {
    "channels": [
      "./dist/index.js"
    ]
  },
  "configSchema": {
    "type": "object",
    "properties": {
      "channels": {
        "type": "object",
        "properties": {
          "dingtalk": {
            "type": "object",
            "properties": {
              "accounts": {
                "type": "object",
                "additionalProperties": {
                  "type": "object",
                  "properties": {
                    "enabled": {
                      "type": "boolean",
                      "description": "Whether this account is enabled"
                    },
                    "clientId": {
                      "type": "string",
                      "description": "AppKey from DingTalk developer console"
                    },
                    "clientSecret": {
                      "type": "string",
                      "description": "AppSecret from DingTalk developer console"
                    },
                    "webhookUrl": {
                      "type": "string",
                      "description": "Optional webhook URL for proactive messages"
                    }
                  },
                  "required": [
                    "clientId",
                    "clientSecret"
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}